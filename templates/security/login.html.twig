{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}

    <h1>Bienvenue dans Déléguéo !</h1>

    <form class="login-form" method="post">
        {% if error %}
            <div class="alert alert-danger">Le mot de passe est erroné.</div>
            {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 
            'security') }}</div> #}
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                {{ app.user.username }}, vous êtes connecté(e) !
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter :</h1>
        
        <label for="inputUsername">Nom d'utilisateur</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" 
            class="form-control" placeholder="Entrez votre prénom et votre nom" required autofocus>
        
        <label for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" 
            class="form-control" placeholder="Entrez votre mot de passe" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <div class="login-button">
            <button class="btn btn-lg btn-success" type="submit">
                Se connecter
            </button>
        </div>
    </form>

{% endblock %}