{% extends '/user/base.html.twig' %}

{% block body %}

<div class="index-page">
    <h1>Qui sont les candidats ?</h1>

    <p class="instruction">Pour le savoir, choisis d'abord ton école et ta classe :</p>

    <div class="candidat-img">
        <img src="/img/candidat.png" alt="candidat"></img>
    </div>
        
    <div class="schools">
        {% for school in schools %}
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <img class="school-img" src="/img/school.png" alt"school"></img>
                        <p>École <br> {{ school.name }}</p>
                    </div>
                    <div class="flip-card-back">
                        {% for classroom in school.classroomsSorted %}
                            <div class="classrooms">
                                <p>
                                    <a href="{{ path('app_candidature_index', {'classroomId': classroom.id}) }}">Classe de {{ classroom.name }}</a>
                                </p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>




    {# {% for candidature in candidatures %}
        <p>{{ candidature.firstname }}</p>
        <img></img>
    {% endfor %} #}
</div>

{% endblock %}